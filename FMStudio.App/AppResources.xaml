<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:FMStudio.App.Converters">

    <!--#region Converters-->
    
    <converters:BooleanToOpacityConverter x:Key="BoolToOpacity" />
    
    <BooleanToVisibilityConverter x:Key="BoolToVis" />

    <converters:AddToDoubleConverter x:Key="AddToDouble" />
    
    <converters:ValueConverterGroup x:Key="InvertBoolToVis">
        <converters:InvertBooleanConverter />
        <BooleanToVisibilityConverter />
    </converters:ValueConverterGroup>

    <!--#endregion-->
    
</ResourceDictionary>